{
   "name": "blacknet-desktop",
   "main": "main.js",
   "version": "1.2.0",
   "description": "Blacknet-desktop is fast, because it uses servers that index the Blacknet blockchain.",
   "homepage": "https://gitlab.com/blacknet-ninja/blacknet-desktop",
   "author": {
      "name": "blacknet1fcemzzxna",
      "email": "blacknet1fcemzzxna@gmail.com",
      "url": "https://gitlab.com/blacknet1fcemzzxna"
   },
   "devDependencies": {
      "electron": "^7.1.8"
   },
   "scripts": {
      "start": "electron .",
      "pack": "electron-builder --dir",
      "dist": "electron-builder -mwl --dir"
   },
   "dependencies": {
      "blacknetjs": "^1.1.2",
      "request": "^2.88.0"
   },
   "build": {
      "appId": "blacknet",
      "artifactName": "blacknet-desktop-${version}.${ext}",
      "mac": {
         "category": "public.app-category.Wallets"
      },
      "dmg": {
         "iconSize": 128,
         "contents": [
            {
               "x": 115,
               "y": 164
            },
            {
               "x": 387,
               "y": 164,
               "type": "link",
               "path": "/Applications"
            }
         ],
         "window": {
            "x": 200,
            "y": 200,
            "width": 500,
            "height": 300
         }
      },
      "linux": {
         "executableName": "Blacknet-desktop",
         "category": "public.app-category.Wallets",
         "target": [
            "deb",
            "rpm",
            "freebsd"
         ]
      },
      "files": [
         {
            "from": ".",
            "to": "./",
            "filter": [
               "!blacknet/*",
               "!dist/*"
            ]
         }
      ],
      "win": {
         "target": [
            {
               "target": "portable",
               "arch": [
                  "x64",
                  "ia32"
               ]
            }
         ]
      },
      "nsis": {
         "perMachine": false,
         "oneClick": false,
         "createDesktopShortcut": "always",
         "differentialPackage": false
      },
      "asar": true,
      "icon": "./logo.png"
   }
}
